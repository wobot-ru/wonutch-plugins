<?xml version="1.0" encoding="UTF-8"?>
<plugin
        id="parse-sm"
        name="Nutch plugin for parsing social media content"
        version="1.0"
        provider-name="wobot.ru">

    <runtime>
        <library name="parse-sm.jar">
            <export name="*"/>
        </library>
    </runtime>

    <requires>
        <import plugin="nutch-extensionpoints"/>
        <import plugin="lib-sm"/>
    </requires>

    <extension id="org.apache.nutch.parse.sm"
               name="VkParser"
               point="org.apache.nutch.parse.Parser">
        <implementation id="org.apache.nutch.parse.sm.VkParser"
                        class="org.apache.nutch.parse.sm.VkParser">
            <parameter name="contentType" value="application/json"/>
            <parameter name="pathSuffix" value=""/>
        </implementation>
    </extension>
</plugin>