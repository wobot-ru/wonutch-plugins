<?xml version="1.0" encoding="UTF-8"?>
<plugin
        id="parse-vk"
        name="VkParse"
        version="1.0"
        provider-name="wobot.ru">

    <runtime>
        <library name="parse-vk.jar">
            <export name="*"/>
        </library>
        <library name="aopalliance-1.0.jar"/>
        <library name="commons-codec-1.6.jar"/>
        <library name="commons-logging-1.2.jar"/>
        <library name="gson-2.4.jar"/>
        <library name="httpclient-4.3.6.jar"/>
        <library name="httpcore-4.3.3.jar"/>
        <library name="jackson-annotations-2.5.3.jar"/>
        <library name="jackson-core-2.5.3.jar"/>
        <library name="jackson-databind-2.5.3.jar"/>
        <library name="javax.inject-1.jar"/>
        <library name="lib-vk.jar"/>
        <library name="spring-aop-4.1.8.RELEASE.jar"/>
        <library name="spring-beans-4.1.8.RELEASE.jar"/>
        <library name="spring-context-4.1.8.RELEASE.jar"/>
        <library name="spring-core-4.1.8.RELEASE.jar"/>
        <library name="spring-expression-4.1.8.RELEASE.jar"/>
        <library name="spring-social-config-1.1.4.RELEASE.jar"/>
        <library name="spring-social-core-1.1.4.RELEASE.jar"/>
        <library name="spring-social-vkontakte-1.1.0.BUILD-SNAPSHOT.jar"/>
        <library name="spring-social-web-1.1.4.RELEASE.jar"/>
        <library name="spring-web-4.1.8.RELEASE.jar"/>
        <library name="spring-webmvc-4.1.8.RELEASE.jar"/>
    </runtime>

    <requires>
        <import plugin="nutch-extensionpoints"/>
        <import plugin="lib-vk"/>
    </requires>

    <extension id="org.apache.nutch.parse.vk"
               name="VkParser"
               point="org.apache.nutch.parse.Parser">
        <implementation id="org.apache.nutch.parse.vk.VkParser"
                        class="org.apache.nutch.parse.vk.VkParser">
            <parameter name="contentType" value="application/json"/>
            <parameter name="pathSuffix" value=""/>
        </implementation>
    </extension>
    <extension id="org.apache.nutch.indexer.multipage"
               name="MultiPage Indexing Filter"
               point="org.apache.nutch.indexer.IndexingFilter">
        <implementation id="VkIndexingFilter"
                        class="org.apache.nutch.parse.vk.VkIndexingFilter"/>

    </extension>

</plugin>