<?xml version="1.0" encoding="UTF-8"?>
<plugin
        id="protocol-sm"
        name="Plug-in supporting social media sources"
        version="1.0.0"
        provider-name="wobot.ru">

    <runtime>
        <library name="protocol-sm.jar">
            <export name="*"/>
        </library>
    </runtime>

    <requires>
        <import plugin="nutch-extensionpoints"/>
        <import plugin="lib-sm"/>
    </requires>

    <extension id="org.apache.nutch.protocol.sm"
               name="SMProtocol"
               point="org.apache.nutch.protocol.Protocol">

        <implementation id="org.apache.nutch.protocol.sm.Vk"
                        class="org.apache.nutch.protocol.sm.Vk">
            <parameter name="protocolName" value="vk"/>
        </implementation>
        <implementation id="org.apache.nutch.protocol.sm.Fb"
                        class="org.apache.nutch.protocol.sm.Fb">
            <parameter name="protocolName" value="fb"/>
        </implementation>
    </extension>
</plugin>
